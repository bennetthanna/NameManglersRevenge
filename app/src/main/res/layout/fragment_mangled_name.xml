<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.example.hannabennett.namemanglersrevenge.MangledNameViewModel"
            />
    </data>

    <LinearLayout
        android:id="@+id/linear_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mangled_name"
            android:text="@{viewModel.mangledName}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/reset_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reset_button"/>
                <!--android:onClick="@{() -> viewModel.resetButtonClicked()}"-->

            <Button
                android:id="@+id/remangle_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remangle_button"/>
                <!--android:onClick="@{() -> viewModel.remangleButtonClicked()}"-->

        </LinearLayout>

    </LinearLayout>
</layout>